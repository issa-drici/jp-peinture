    class="w-full bg-hero bg-no-repeat bg-cover min-h-screen lg:min-h-[110vh] px-12 xl:px-0 flex items-center"
  >
    <div class="lg:max-w-[1200px] w-full mx-auto flex flex-col lg:flex-row">
      <div class="flex flex-col">
        <h1
          class="text-[30px] leading-[50px] md:text-[60px] xl:text-[85px] pb-4 font-dm md:leading-[106.25px] w-full xl:max-w-[100%] text-primary-200"
